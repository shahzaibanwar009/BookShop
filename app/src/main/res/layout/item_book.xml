<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_book"
    android:padding="16dp">

    <TextView
        android:id="@+id/book_listview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorGreen"
        android:hint="There will be a title"/>

    <TextView
        android:id="@+id/book_listview_isbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_listview_title"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearance"
        android:textColor="@color/input_login"
        android:hint="There will be ISBN"/>

    <TextView
        android:id="@+id/book_listview_publish_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_listview_isbn"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearance"
        android:textColor="@color/input_login"
        android:hint="There will be a Publish date"/>

</RelativeLayout>